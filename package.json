{
    "name": "capslockx",
    "version": "1.12.0",
    "description": "CapsLockX 提供一套超好上手的：鼠标模拟、编辑增强、虚拟桌面与窗口管理、应用内热键增强、JS数学表达式计算、等超多功能等你来定义。",
    "scripts": {
        "CapsLockX": "CapsLockX.exe",
        "start": "CapsLockX.exe",
        "build:patch": "npm version patch",
        "build:minor": "npm version minor",
        "build:major": "npm version major",
        "versioning": "git commit -a -m versioning",
        "version": "node tools/versioning.node.mjs && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "postversion": "npm run versioning && npm run push",
        "push": "npm run push:gh && npm run push:gh && npm run push:gh",
        "push:gh": "git push --follow-tag --repo git@github.com:snomiao/CapsLockX.git",
        "push:cn": "git push --follow-tag --repo git@gitee.com:snomiao/CapslockX.git",
        "push:bb": "git push --follow-tag --repo git@bitbucket.org:snomiao/capslockx.git"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/snomiao/CapsLockX.git"
    },
    "author": "snomiao@gmail.com",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/snomiao/CapsLockX/issues"
    },
    "homepage": "https://github.com/snomiao/CapsLockX#readme",
    "bin": {
        "capslockx": "CapslockX.exe"
    },
    "main": "CapsLockX.exe",
    "devDependencies": {
        "@commitlint/cli": "^12.0.1",
        "@commitlint/config-conventional": "^12.0.1",
        "conventional-changelog-cli": "^2.1.1"
    }
}